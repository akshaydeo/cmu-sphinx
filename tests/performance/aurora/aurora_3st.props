###########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.models=aurora
aurora;edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel

aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.ascii
aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39
aurora;edu.cmu.sphinx.util.LogMath.logBase = 1.0001

aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.location = file:/lab/speech/sphinx4/data/aurora/models3st.zip
aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.definition_file = etc/mfcclean_forbushderby.500.mdef
aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.data_location = mfcclean_forbushderby_cd_continuous_8gau
aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props
aurora;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.useComposites=false


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.bytesPerAudioFrame = 4000
edu.cmu.sphinx.frontend.cepstrumSize = 13
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.preemphasis.factor = 0.97
edu.cmu.sphinx.frontend.windowSizeInMs = 25.625
edu.cmu.sphinx.frontend.windowShiftInMs = 10
edu.cmu.sphinx.frontend.windower.alpha = 0.46
edu.cmu.sphinx.frontend.useAcousticModelProperties = true

# the following properties are effective only if 'useAcousticModelProperties'
# is false

edu.cmu.sphinx.frontend.mel.numFilters = 40
edu.cmu.sphinx.frontend.mel.minfreq = 130
edu.cmu.sphinx.frontend.mel.maxfreq = 6800
edu.cmu.sphinx.frontend.fft.numberFftPoints = 512
edu.cmu.sphinx.frontend.cmn.live.initialCepstralMean = 12
edu.cmu.sphinx.frontend.cmn.live.windowSize = 500
edu.cmu.sphinx.frontend.cmn.live.shiftWindow = 800
edu.cmu.sphinx.frontend.sampleRate = 16000


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.SortingActiveList
edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.decoder.linguist.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.decoder.linguist.Linguist.compositeThreshold=100000
edu.cmu.sphinx.knowledge.acoustic.useComposites=false
edu.cmu.sphinx.decoder.search.validateResults=false


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.simple.StaticLinguist
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.WordListGrammar
edu.cmu.sphinx.decoder.Recognizer.dumpMemoryInfo=false
edu.cmu.sphinx.decoder.Recognizer.dumpSentenceHMM=false


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.location = file:/lab/speech/sphinx4/data/aurora/models3st.zip
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = dict/dict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.wordReplacement=<sil>
edu.cmu.sphinx.knowledge.dictionary.Dictionary.allowMissingWords=true


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=false
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minTokensPerThread=10


############################################################
#
# WordListGrammar properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.WordListGrammar.isLooping=true
edu.cmu.sphinx.decoder.linguist.WordListGrammar.addSilenceWord=true


############################################################
#
# Frequently tuned parameters
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-250
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.filterSuccessors=false
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.languageWeight=7.0
edu.cmu.sphinx.knowledge.dictionary.Dictionary.addSilEndingPronunciation=true
edu.cmu.sphinx.decoder.linguist.Linguist.expandInterNodeContexts=true
edu.cmu.sphinx.decoder.linguist.Linguist.showSentenceHMM=false
edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.decoder.linguist.Linguist.autoLoopSilence=false
edu.cmu.sphinx.search.StaticLinguist.isFlatSentenceHMM=false

edu.cmu.sphinx.decoder.search.validateResults=false
edu.cmu.sphinx.decoder.linguist.Linguist.showCompilationProgress=false
