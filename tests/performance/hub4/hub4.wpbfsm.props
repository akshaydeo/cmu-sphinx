############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################
edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.models=hub4
hub4;edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel

hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.format=sphinx3.binary 
hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.location = /lab/speech/sphinx4/data/hub4_model

hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.definition_file = hub4opensrc.6000.mdef
hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.data_location = 6000senones/hub4opensrc.cd_continuous_8gau
hub4;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props


############################################################
#
# Language model properties
#
############################################################

edu.cmu.sphinx.linguist.language.ngram.LanguageModelFactory.languageClass=edu.cmu.sphinx.linguist.language.ngram.large.LargeTrigramModel
edu.cmu.sphinx.linguist.language.ngram.LanguageModel.location=/lab/speech/sphinx4/data/hub4_model/language_model.arpaformat.DMP
edu.cmu.sphinx.linguist.language.ngram.LanguageModel.unigramWeight=0.7
edu.cmu.sphinx.linguist.language.ngram.large.BinaryLoader.applyLanguageWeightAndWip=false

############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.FrontEndFactory.pipelines=mfc

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=7

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.feature.BatchCMN
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.linguist.lextree.LexTreeLinguist
edu.cmu.sphinx.decoder.Recognizer.dumpMemoryInfo=false
edu.cmu.sphinx.decoder.Recognizer.dumpSentenceHMM=false
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.linguist.language.grammar.NullGrammar

edu.cmu.sphinx.decoder.Decoder.showPartialActualResults=false


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.PartitionActiveList
#edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.relativeWordBeamWidth=1E-60
edu.cmu.sphinx.util.BeamFinder.enable=false


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.linguist.Linguist.languageWeight=10.5
edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = .2
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability = .1
edu.cmu.sphinx.linguist.Linguist.addFillerWords=true
edu.cmu.sphinx.linguist.Linguist.fillerInsertionProbability=.05
edu.cmu.sphinx.linguist.Linguist.generateUnitStates=false

############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.linguist.dictionary.Dictionary.location = /lab/speech/sphinx4/data/hub4_model
edu.cmu.sphinx.linguist.dictionary.Dictionary.dictionaryPath = cmudict.06d
edu.cmu.sphinx.linguist.dictionary.Dictionary.fillerPath = fillerdict
edu.cmu.sphinx.linguist.dictionary.Dictionary.allowMissingWords=false


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=false
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=1
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10

edu.cmu.sphinx.decoder.BatchDecoder.showPropertiesAtStart=true
edu.cmu.sphinx.decoder.Decoder.showBestToken=false


edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.buildWordLattice=false
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.WordPruningBreadthFirstSearchManager
edu.cmu.sphinx.linguist.Linguist.wantUnigramSmear=true
edu.cmu.sphinx.linguist.lextree.LexTreeLinguist.fullWordHistories=true

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=30000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-60
edu.cmu.sphinx.decoder.search.ActiveListManager.relativeWordBeamWidth=1E-30
edu.cmu.sphinx.decoder.search.ActiveListManager.absoluteWordBeamWidth=22
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.growSkipInterval=0
edu.cmu.sphinx.linguist.Linguist.unigramSmearWeight=1

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.acousticLookaheadFrames=1.7

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.keepAllTokens=true
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.linguist.lextree.LexTreeLinguist 
