############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.knowledge.acoustic.FeatureVectorLength = 39

edu.cmu.sphinx.knowledge.acoustic.format=sphinx3.binary 
edu.cmu.sphinx.knowledge.acoustic.location = /lab/speech/sphinx4/data/merlModel

edu.cmu.sphinx.knowledge.acoustic.definition_file = BNfalign.semitrees.4000.mdef
edu.cmu.sphinx.knowledge.acoustic.data_location = BNfalign.semitrees.cd_continuous_32gau
edu.cmu.sphinx.knowledge.acoustic.properties_file = am.props


############################################################
#
# Language model properties
#
############################################################

edu.cmu.sphinx.knowledge.language.LanguageModelFactory.languageClass=edu.cmu.sphinx.knowledge.language.large.LargeTrigramModel
edu.cmu.sphinx.knowledge.language.LanguageModel.location=/lab/speech/sphinx4/data/merlModel/h032f.3.arpabo.Z.DMP
edu.cmu.sphinx.knowledge.language.LanguageModel.unigramWeight=0.7
edu.cmu.sphinx.knowledge.language.large.BinaryLoader.applyLanguageWeightAndWip=false

############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.bytesPerAudioFrame = 4000
edu.cmu.sphinx.frontend.cepstrumSize = 13
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.preemphasis.factor = 0.97
edu.cmu.sphinx.frontend.windowSizeInMs = 25.625
edu.cmu.sphinx.frontend.windowShiftInMs = 10
edu.cmu.sphinx.frontend.windower.alpha = 0.46


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.lextree.LexTreeLinguist
edu.cmu.sphinx.decoder.Recognizer.dumpMemoryInfo=false
edu.cmu.sphinx.decoder.Recognizer.dumpSentenceHMM=false
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.NullGrammar
edu.cmu.sphinx.decoder.Recognizer.featureBlockSize=1

edu.cmu.sphinx.decoder.Decoder.showPartialActualResults=false
edu.cmu.sphinx.decoder.Decoder.showPartialResults=true


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.PartitionActiveList
#edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.relativeWordBeamWidth=1E-60
edu.cmu.sphinx.util.BeamFinder.enable=false


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = .2
edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = .5
edu.cmu.sphinx.decoder.linguist.Linguist.addFillerWords=true
edu.cmu.sphinx.decoder.linguist.Linguist.fillerInsertionProbability=.50
edu.cmu.sphinx.decoder.linguist.Linguist.generateUnitStates=false

############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.useAcousticModelLocation = true
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = cmudict.06d
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.allowMissingWords=false


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10

edu.cmu.sphinx.decoder.BatchDecoder.showPropertiesAtStart=true
edu.cmu.sphinx.decoder.Decoder.showBestToken=true
edu.cmu.sphinx.decoder.Decoder.showActualToken=true
edu.cmu.sphinx.decoder.Decoder.showHypothesisScore=true


edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.buildWordLattice=false
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.WordPruningBreadthFirstSearchManager
edu.cmu.sphinx.decoder.linguist.Linguist.wantUnigramSmear=true
edu.cmu.sphinx.decoder.linguist.clextree.LexTreeLinguist.fullWordHistories=true

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=70000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-120
edu.cmu.sphinx.decoder.search.ActiveListManager.relativeWordBeamWidth=1E-80
edu.cmu.sphinx.decoder.search.ActiveListManager.absoluteWordBeamWidth=100
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.growSkipInterval=0
edu.cmu.sphinx.decoder.linguist.Linguist.unigramSmearWeight=1

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.acousticLookaheadFrames=0

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.keepAllTokens=true
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.cclextree.LexTreeLinguist 
edu.cmu.sphinx.decoder.linguist.Linguist.languageWeight=10
