edu.cmu.sphinx.search.Recognizer.linguist = edu.cmu.sphinx.search.parallel.ParallelLinguist
edu.cmu.sphinx.search.Recognizer.grammar = edu.cmu.sphinx.search.WordListGrammar
edu.cmu.sphinx.search.Recognizer.searchManager = edu.cmu.sphinx.search.parallel.ParallelSearchManager

# edu.cmu.sphinx.search.Recognizer.searchManager = edu.cmu.sphinx.search.BreadthFirstSearchManager
edu.cmu.sphinx.search.BreadthFirstSearchManager.filterSuccessors=false

edu.cmu.sphinx.search.Recognizer.linguistProcessors = edu.cmu.sphinx.util.GDLDumper

