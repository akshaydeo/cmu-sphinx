############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.model.acoustic.names = aurora_mfc aurora_plp

edu.cmu.sphinx.model.acoustic.aurora_mfc.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.aurora_mfc.location = /lab/speech/sphinx4/data/aurora2_model
edu.cmu.sphinx.model.acoustic.aurora_mfc.definition_file = mfc.500.mdef
edu.cmu.sphinx.model.acoustic.aurora_mfc.data_location = mfc.cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.aurora_mfc.properties_file = mfc.am.props
edu.cmu.sphinx.model.acoustic.aurora_mfc.FeatureVectorLength = 39

edu.cmu.sphinx.model.acoustic.aurora_plp.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.aurora_plp.FeatureVectorLength = 39
edu.cmu.sphinx.model.acoustic.aurora_plp.location = /lab/speech/sphinx4/data/aurora2_model
edu.cmu.sphinx.model.acoustic.aurora_plp.definition_file = plp.500.mdef
edu.cmu.sphinx.model.acoustic.aurora_plp.data_location = plp.cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.aurora_plp.properties_file = plp.am.props

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.useAcousticModelProperties = true

edu.cmu.sphinx.frontend.featureExtractor = edu.cmu.sphinx.frontend.DeltasFeatureExtractor
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.keepAudioReference = true

edu.cmu.sphinx.frontend.cmn = edu.cmu.sphinx.frontend.BatchCMN


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.search.ActiveList.relativeBeamWidth=1E-200

edu.cmu.sphinx.search.BreadthFirstSearchManager.filterSuccessors=false

edu.cmu.sphinx.search.parallel.FeatureScorePruner.absoluteBeamWidth=2000
edu.cmu.sphinx.search.parallel.FeatureScorePruner.relativeBeamWidth=1E-200

edu.cmu.sphinx.search.parallel.CombinedScorePruner.absoluteBeamWidth=40
edu.cmu.sphinx.search.parallel.CombinedScorePruner.relativeBeamWidth=1E-200

edu.cmu.sphinx.search.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.search.Linguist.silenceInsertionProbability = 1
edu.cmu.sphinx.search.Linguist.showSentenceHMM=false
edu.cmu.sphinx.search.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.search.Linguist.compositeThreshold=10000
edu.cmu.sphinx.search.validateResults=false



############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.search.Dictionary.useAcousticModelLocation = false
edu.cmu.sphinx.search.Dictionary.dictionaryPath = /lab/speech/sphinx4/data/aurora2_model/dictionary
edu.cmu.sphinx.search.Dictionary.fillerPath = /lab/speech/sphinx4/data/aurora2_model/fillerdict
edu.cmu.sphinx.search.Dictionary.addSilEndingPronunciation=false


############################################################
#
# WordListGrammar properties
#
############################################################

edu.cmu.sphinx.search.SimpleWordListGrammar.isLooping = true
edu.cmu.sphinx.search.SimpleWordListGrammar.path = ./digits.wordlist


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.search.Recognizer.dumpFrontEnd = true

edu.cmu.sphinx.search.Recognizer.acousticScorer = edu.cmu.sphinx.search.parallel.ParallelAcousticScorer
edu.cmu.sphinx.search.Recognizer.linguist = edu.cmu.sphinx.search.parallel.ParallelSimpleLinguist
edu.cmu.sphinx.search.Recognizer.grammar = edu.cmu.sphinx.search.SimpleWordListGrammar
edu.cmu.sphinx.search.Recognizer.searchManager = edu.cmu.sphinx.search.parallel.ParallelSearchManager
edu.cmu.sphinx.search.Recognizer.linguistProcessors = edu.cmu.sphinx.util.GDLDumper
