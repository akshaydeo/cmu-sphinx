############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.knowledge.acoustic.names = mfc plp

edu.cmu.sphinx.knowledge.acoustic.mfc.format = sphinx3.ascii
edu.cmu.sphinx.knowledge.acoustic.mfc.location = /lab/speech/sphinx4/data/aurora2_model
edu.cmu.sphinx.knowledge.acoustic.mfc.definition_file = mfc.500.mdef
edu.cmu.sphinx.knowledge.acoustic.mfc.data_location = mfc.cd_continuous_8gau
edu.cmu.sphinx.knowledge.acoustic.mfc.properties_file = mfc.am.props
edu.cmu.sphinx.knowledge.acoustic.mfc.FeatureVectorLength = 39

edu.cmu.sphinx.knowledge.acoustic.mfc2.format = sphinx3.ascii
edu.cmu.sphinx.knowledge.acoustic.mfc2.location = /lab/speech/sphinx4/data/aurora2_model
edu.cmu.sphinx.knowledge.acoustic.mfc2.definition_file = mfc.500.mdef
edu.cmu.sphinx.knowledge.acoustic.mfc2.data_location = mfc.cd_continuous_8gau
edu.cmu.sphinx.knowledge.acoustic.mfc2.properties_file = mfc.am.props
edu.cmu.sphinx.knowledge.acoustic.mfc2.FeatureVectorLength = 39

edu.cmu.sphinx.knowledge.acoustic.plp.format = sphinx3.ascii
edu.cmu.sphinx.knowledge.acoustic.plp.FeatureVectorLength = 39
edu.cmu.sphinx.knowledge.acoustic.plp.location = /lab/speech/sphinx4/data/aurora2_model
edu.cmu.sphinx.knowledge.acoustic.plp.definition_file = plp.500.mdef
edu.cmu.sphinx.knowledge.acoustic.plp.data_location = plp.cd_continuous_8gau
edu.cmu.sphinx.knowledge.acoustic.plp.properties_file = plp.am.props

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.useAcousticModelProperties = true

edu.cmu.sphinx.frontend.featureExtractor = edu.cmu.sphinx.frontend.DeltasFeatureExtractor
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.keepAudioReference = true

edu.cmu.sphinx.frontend.cmn = edu.cmu.sphinx.frontend.BatchCMN


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-200

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.filterSuccessors=false

edu.cmu.sphinx.research.parallel.FeatureScorePruner.absoluteBeamWidth=2000
edu.cmu.sphinx.research.parallel.FeatureScorePruner.relativeBeamWidth=1E-200

edu.cmu.sphinx.research.parallel.CombinedScorePruner.absoluteBeamWidth=30
edu.cmu.sphinx.research.parallel.CombinedScorePruner.relativeBeamWidth=1E-200

edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = 1
edu.cmu.sphinx.decoder.linguist.Linguist.showSentenceHMM=false
edu.cmu.sphinx.decoder.linguist.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.decoder.linguist.Linguist.compositeThreshold=10000
edu.cmu.sphinx.search.validateResults=false



############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.useAcousticModelLocation = false
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = /lab/speech/sphinx4/data/aurora2_model/dictionary
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = /lab/speech/sphinx4/data/aurora2_model/fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.addSilEndingPronunciation=false


############################################################
#
# WordListGrammar properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar.isLooping = true
edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar.path = ./digits.wordlist


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.dumpFrontEnd = true

edu.cmu.sphinx.decoder.Recognizer.acousticScorer = edu.cmu.sphinx.research.parallel.ParallelAcousticScorer
edu.cmu.sphinx.decoder.Recognizer.linguist = edu.cmu.sphinx.research.parallel.ParallelSimpleLinguist
edu.cmu.sphinx.decoder.Recognizer.grammar = edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar
edu.cmu.sphinx.decoder.Recognizer.searchManager = edu.cmu.sphinx.research.parallel.ParallelSearchManager
edu.cmu.sphinx.decoder.Recognizer.linguistProcessors = edu.cmu.sphinx.util.GDLDumper
edu.cmu.sphinx.util.GDLDumper.skipHMMs = false