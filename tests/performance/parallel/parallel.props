############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.search.ActiveList.absoluteBeamWidth=200
edu.cmu.sphinx.search.ActiveList.relativeBeamWidth=1E-200
edu.cmu.sphinx.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.search.FastActiveList
edu.cmu.sphinx.search.SimpleDigitLinguist.isConnectedDigitGrammar=true
edu.cmu.sphinx.search.Linguist.wordInsertionProbability = 1.0E-36
edu.cmu.sphinx.search.Linguist.silenceInsertionProbability = 0.99
edu.cmu.sphinx.search.Linguist.showSentenceHMM=false
edu.cmu.sphinx.search.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.search.Linguist.compositeThreshold=10000
edu.cmu.sphinx.search.validateResults=false


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.search.Dictionary.useAcousticModelLocation = false
edu.cmu.sphinx.search.Dictionary.dictionaryPath = /lab/speech/sphinx4/data/wsj/dict/digits.dict
edu.cmu.sphinx.search.Dictionary.fillerPath = /lab/speech/sphinx4/data/wsj/dict/fillerdict
edu.cmu.sphinx.search.Dictionary.addSilEndingPronunciation=false


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.search.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.search.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.search.ThreadedAcousticScorer.minTokensPerThread=10

############################################################
#
# WordListGrammar properties
#
############################################################

edu.cmu.sphinx.search.WordListGrammar.isLooping = true
edu.cmu.sphinx.search.WordListGrammar.path = ./digits.wordlist


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.search.Recognizer.dumpFrontEnd = true
edu.cmu.sphinx.search.Recognizer.linguist = edu.cmu.sphinx.search.parallel.ParallelLinguist
edu.cmu.sphinx.search.StaticLinguist.isFlatSentenceHMM = false
edu.cmu.sphinx.search.Recognizer.grammar = edu.cmu.sphinx.search.WordListGrammar
edu.cmu.sphinx.search.Recognizer.linguistProcessors = edu.cmu.sphinx.util.GDLDumper

edu.cmu.sphinx.model.acoustic.useComposites=false
edu.cmu.sphinx.search.BreadthFirstSearchManager.filterSuccessors=true
edu.cmu.sphinx.search.BreadthFirstSearchManager.languageWeight=7.0


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.search.Linguist.expandInterNodeContexts=true
