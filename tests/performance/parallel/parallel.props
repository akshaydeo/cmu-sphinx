edu.cmu.sphinx.model.acoustic.wsj_4gau.FeatureVectorLength = 39

edu.cmu.sphinx.model.acoustic.wsj_8gau.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.wsj_8gau.FeatureVectorLength = 39
edu.cmu.sphinx.model.acoustic.wsj_8gau.location = /lab/speech/sphinx4/data/wsj
edu.cmu.sphinx.model.acoustic.wsj_8gau.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
edu.cmu.sphinx.model.acoustic.wsj_8gau.data_location = cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.wsj_8gau.properties_file = am.props

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


