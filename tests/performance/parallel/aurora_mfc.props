############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.models = mfc plp

mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.ascii
mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.location = /lab/speech/sphinx4/data/aurora2_model
mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.definition_file = mfc.500.mdef
mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.data_location = mfc.cd_continuous_8gau
mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.properties_file = mfc.am.props
mfc;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.ascii
plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39
plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.location = /lab/speech/sphinx4/data/aurora2_model
plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.definition_file = plp.500.mdef
plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.data_location = plp.cd_continuous_8gau
plp;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.properties_file = plp.am.props

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.useAcousticModelProperties = true

edu.cmu.sphinx.frontend.featureExtractor = edu.cmu.sphinx.frontend.DeltasFeatureExtractor
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.keepAudioReference = true

edu.cmu.sphinx.frontend.cmn = edu.cmu.sphinx.frontend.BatchCMN


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-200
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.filterSuccessors=false
edu.cmu.sphinx.decoder.search.validateResults=false

edu.cmu.sphinx.research.parallel.FeatureScorePruner.absoluteBeamWidth=2000
edu.cmu.sphinx.research.parallel.FeatureScorePruner.relativeBeamWidth=1E-200

edu.cmu.sphinx.research.parallel.CombinedScorePruner.absoluteBeamWidth=40
edu.cmu.sphinx.research.parallel.CombinedScorePruner.relativeBeamWidth=1E-200


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.linguist.dictionary.Dictionary.dictionaryPath = /lab/speech/sphinx4/data/aurora2_model/dictionary
edu.cmu.sphinx.linguist.dictionary.Dictionary.fillerPath = /lab/speech/sphinx4/data/aurora2_model/fillerdict
edu.cmu.sphinx.linguist.dictionary.Dictionary.addSilEndingPronunciation=false


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar.isLooping = true
edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar.path = ./digits.wordlist

edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability = 1
edu.cmu.sphinx.linguist.Linguist.showSentenceHMM=false
edu.cmu.sphinx.linguist.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.linguist.Linguist.compositeThreshold=10000


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.dumpFrontEnd = true

edu.cmu.sphinx.decoder.Recognizer.acousticScorer = edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer
edu.cmu.sphinx.decoder.Recognizer.linguist = edu.cmu.sphinx.linguist.SimpleLinguist
edu.cmu.sphinx.decoder.Recognizer.grammar = edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar
edu.cmu.sphinx.decoder.Recognizer.searchManager = edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.decoder.Recognizer.linguistProcessors = edu.cmu.sphinx.util.GDLDumper
