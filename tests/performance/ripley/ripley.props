
##########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################


edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.models=wsj
wsj;edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel

wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.format=sphinx3.binary 
wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip

wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.data_location = cd_continuous_8gau
wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props
wsj;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.useComposites=false


############################################################
#
# Language model properties
#
############################################################

edu.cmu.sphinx.knowledge.language.LanguageModelFactory.languageClass=edu.cmu.sphinx.knowledge.language.SimpleNGramModel
edu.cmu.sphinx.knowledge.language.LanguageModel.location=./ripley.flat_unigram.lm
edu.cmu.sphinx.knowledge.language.LanguageModel.unigramWeight=0.7


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.bigEndianData = false
edu.cmu.sphinx.frontend.signedData = true


############################################################
# 
# Recognizer/Decoder properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.clextree.LexTreeLinguist
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.NullGrammar
edu.cmu.sphinx.decoder.Recognizer.acousticScorer=edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.PartitionActiveList
edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=800
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-80


############################################################
# 
# Linguist properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = 0.1
edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-16
edu.cmu.sphinx.decoder.linguist.Linguist.languageWeight=22
edu.cmu.sphinx.decoder.linguist.Linguist.addFillerWords=true


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = dict/cmudict.0.6d
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.wordReplacement=<sil>
edu.cmu.sphinx.knowledge.dictionary.Dictionary.allowMissingWords=true



############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:

edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.relativeWordBeamWidth=1E-100

