###########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.model.acoustic.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.FeatureVectorLength = 39
edu.cmu.sphinx.util.LogMath.logBase = 1.0001

edu.cmu.sphinx.model.acoustic.location = /lab/speech/sphinx4/data/wsj
# edu.cmu.sphinx.model.acoustic.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.zip
edu.cmu.sphinx.model.acoustic.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
edu.cmu.sphinx.model.acoustic.data_location = cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.properties_file = am.props
edu.cmu.sphinx.model.acoustic.useComposites=false


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.bytesPerAudioFrame = 4000
edu.cmu.sphinx.frontend.cepstrumSize = 13
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.preemphasis.factor = 0.97
edu.cmu.sphinx.frontend.windowSizeInMs = 25.625
edu.cmu.sphinx.frontend.windowShiftInMs = 10
edu.cmu.sphinx.frontend.windower.alpha = 0.46
edu.cmu.sphinx.frontend.useAcousticModelProperties = true

# the following properties are effective only if 'useAcousticModelProperties'
# is false

edu.cmu.sphinx.frontend.mel.numFilters = 40
edu.cmu.sphinx.frontend.mel.minfreq = 130
edu.cmu.sphinx.frontend.mel.maxfreq = 6800
edu.cmu.sphinx.frontend.fft.numberFftPoints = 512
edu.cmu.sphinx.frontend.cmn.live.initialCepstralMean = 12
edu.cmu.sphinx.frontend.cmn.live.windowSize = 500
edu.cmu.sphinx.frontend.cmn.live.shiftWindow = 800
edu.cmu.sphinx.frontend.sampleRate = 16000


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.search.TreeActiveList
edu.cmu.sphinx.search.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.search.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.search.Linguist.compositeThreshold=100000
edu.cmu.sphinx.model.acoustic.useComposites=false
edu.cmu.sphinx.search.validateResults=false


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.search.Recognizer.linguist=edu.cmu.sphinx.search.StaticLinguist
edu.cmu.sphinx.search.Recognizer.grammar=edu.cmu.sphinx.search.WordListGrammar


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.search.Dictionary.useAcousticModelLocation = true
edu.cmu.sphinx.search.Dictionary.dictionaryPath = dict/cmudict.0.6d
edu.cmu.sphinx.search.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.search.Dictionary.wordReplacement=<sil>
edu.cmu.sphinx.search.Dictionary.allowMissingWords=true


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.search.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.search.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.search.ThreadedAcousticScorer.minTokensPerThread=10


############################################################
#
# WordListGrammar properties
#
############################################################

edu.cmu.sphinx.search.WordListGrammar.isLooping=true
edu.cmu.sphinx.search.WordListGrammar.addSilenceWord=true


############################################################
#
# Frequently tuned parameters
#
############################################################

edu.cmu.sphinx.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.search.ActiveList.relativeBeamWidth=1E-150
edu.cmu.sphinx.search.BreadthFirstSearchManager.filterSuccessors=false
edu.cmu.sphinx.search.BreadthFirstSearchManager.languageWeight=7.0
edu.cmu.sphinx.search.Dictionary.addSilEndingPronunciation=true
edu.cmu.sphinx.search.Linguist.expandInterNodeContexts=true
edu.cmu.sphinx.search.Linguist.showSentenceHMM=false
edu.cmu.sphinx.search.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.search.Linguist.autoLoopSilence=false
edu.cmu.sphinx.search.StaticLinguist.isFlatSentenceHMM=false

edu.cmu.sphinx.search.validateResults=false
edu.cmu.sphinx.search.Linguist.showCompilationProgress=false
