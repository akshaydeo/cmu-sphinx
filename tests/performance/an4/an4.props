###########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################
edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.models=wsj
wsj;edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel

wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.format=sphinx3.binary 
wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.location = file:./../../../models/acoustic/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip

wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.data_location = cd_continuous_8gau
wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props
wsj;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.useComposites=false


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.FrontEndFactory.pipelines=mfc

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=7

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.feature.BatchCMN
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor

mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=8
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.endpoint.LevelTracker
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.LiveCMN
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.8.class=edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor

edu.cmu.sphinx.frontend.endpoint.LevelTracker.threshold=16
edu.cmu.sphinx.frontend.endpoint.SpeechMarker.speechTrailer=50


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.linguistProcessors = edu.cmu.sphinx.linguist.util.GDLDumper
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.linguist.flat.FlatLinguist
edu.cmu.sphinx.decoder.Recognizer.dumpMemoryInfo=false
edu.cmu.sphinx.decoder.Recognizer.dumpSentenceHMM=false
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.PartitionActiveList
edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=800
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-150


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar.isLooping = true
edu.cmu.sphinx.linguist.Linguist.languageWeight=7.0
edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.linguist.Linguist.showCompilationProgress=false


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.linguist.dictionary.Dictionary.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.linguist.dictionary.Dictionary.dictionaryPath = dict/cmudict.0.6d
edu.cmu.sphinx.linguist.dictionary.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.linguist.dictionary.Dictionary.wordReplacement=<sil>
edu.cmu.sphinx.linguist.dictionary.Dictionary.allowMissingWords=true


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10






