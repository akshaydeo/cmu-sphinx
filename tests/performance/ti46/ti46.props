############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=100
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.FastActiveList
