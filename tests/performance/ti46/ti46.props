############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.models=tidigits

tidigits;edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.binary
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.location = file:/lab/speech/sphinx4/data/tidigits_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.definition_file = wd_dependent_phone.500.mdef
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.data_location = wd_dependent_phone.cd_continuous_8gau
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props
tidigits;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.featureExtractor = edu.cmu.sphinx.frontend.LiveFeatureExtractor
edu.cmu.sphinx.frontend.keepAudioReference = true


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=100
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.SortingActiveList


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.speech.knowledge.dictionary.Dictionary.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.knowledge.dictionary.Dictionary.location =  file:/lab/speech/sphinx4/data/tidigits_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = dictionary
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.addSilEndingPronunciation=false

edu.cmu.sphinx.knowledge.language.LanguageModel.maxDepth=1 


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=false
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=1
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar.isLooping = false
edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar.path = ./ti46.wordlist

edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-56
edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.decoder.linguist.Linguist.languageWeight = 7.0


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.dumpFrontEnd = false
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.simple.SimpleLinguist
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.SimpleWordListGrammar
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager

