

##########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################
edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.models=rm1
rm1;edu.cmu.sphinx.knowledge.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel

rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.binary
rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.location = file:/lab/speech/sphinx4/data/rm1_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip

rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.definition_file = etc/RM1_clean_13dCep_16k_40mel_130Hz_6800Hz.1800.mdef
rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.data_location = cd_continuous_8gau
rm1;edu.cmu.sphinx.knowledge.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props

edu.cmu.sphinx.knowledge.language.LanguageModelFactory.languageClass=edu.cmu.sphinx.knowledge.language.SimpleNGramModel 


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.FrontEndFactory.pipelines=mfc

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=7

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.feature.BatchCMN
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.LiveFeatureExtractor



############################################################
# 
# Recognizer/Decoder properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.NullGrammar
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.PartitionActiveList
edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=2000
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-205
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.wantEntryPruning=false


############################################################
# 
# Linguist properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = .1
edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-10
edu.cmu.sphinx.decoder.linguist.Linguist.languageWeight=9.0
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.decoder.linguist.clextree.LexTreeLinguist
edu.cmu.sphinx.decoder.linguist.Linguist.generateUnitStates=false


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.location = file:/lab/speech/sphinx4/data/rm1_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = dict/RM.dictionary
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.addSilEndingPronunciation=false
edu.cmu.sphinx.knowledge.dictionary.Dictionary.allowMissingWords=true


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:

edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer.minScoreablesPerThread=10
edu.cmu.sphinx.knowledge.language.LanguageModel.unigramWeight=.7
#edu.cmu.sphinx.knowledge.language.LanguageModel.unigramWeight=1

edu.cmu.sphinx.decoder.BatchDecoder.showPropertiesAtStart=true

#edu.cmu.sphinx.decoder.Recognizer.acousticScorer=edu.cmu.sphinx.decoder.scorer.SimpleAcousticScorer
#edu.cmu.sphinx.decoder.Recognizer.linguistProcessors=edu.cmu.sphinx.decoder.linguist.util.LinguistStats
edu.cmu.sphinx.decoder.Decoder.showBestToken=false
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.growSkipInterval=0
