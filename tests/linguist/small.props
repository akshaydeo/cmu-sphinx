############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=200
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-200
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.SimpleActiveList
edu.cmu.sphinx.search.SimpleDigitLinguist.isConnectedDigitGrammar=true
edu.cmu.sphinx.linguist.Linguist.unitInsertionProbability = 1
edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = 1E-36
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability = 1


############################################################
# 
# Dictionary properties
#
############################################################
edu.cmu.sphinx.linguist.dictionary.Dictionary.useAcousticModelLocation = true
edu.cmu.sphinx.linguist.dictionary.Dictionary.dictionaryPath = dictionary
edu.cmu.sphinx.linguist.dictionary.Dictionary.fillerPath = fillerdict
edu.cmu.sphinx.linguist.dictionary.Dictionary.addSilEndingPronunciation=false

############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#
edu.cmu.sphinx.search.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.search.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.search.ThreadedAcousticScorer.minTokensPerThread=10



############################################################
# 
# Recognizer properties
#
############################################################



edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=200
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-200
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.languageWeight=8.0
edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.linguist.language.grammar.LMGrammar
edu.cmu.sphinx.decoder.Recognizer.featureBlockSize=500
edu.cmu.sphinx.linguist.language.ngram.LanguageModelFactory.languageClass=edu.cmu.sphinx.linguist.language.ngram.SimpleNGramModel
edu.cmu.sphinx.decoder.Recognizer.linguist=edu.cmu.sphinx.linguist.lextree.LexTreeLinguist
edu.cmu.sphinx.decoder.Recognizer.searchManager=edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager
edu.cmu.sphinx.linguist.language.ngram.LanguageModel.location=tiny.unigram
edu.cmu.sphinx.decoder.Recognizer.linguistProcessors=edu.cmu.sphinx.linguist.util.GDLDumper
edu.cmu.sphinx.linguist.util.LinguistDumper.filename=tiny.gdl
edu.cmu.sphinx.util.SphinxProperties.warnIfPropertyNotDefined=false
edu.cmu.sphinx.linguist.util.GDLDumper.skipHMMs=true
edu.cmu.sphinx.linguist.util.GDLDumper.verticalLayout=true
edu.cmu.sphinx.linguist.util.GDLDumper.dumpArcLabels=true
edu.cmu.sphinx.decoder.Decoder.showErrorToken=false
edu.cmu.sphinx.decoder.Decoder.showPartialActualResults=false

edu.cmu.sphinx.linguist.Linguist.unitInsertionProbability = 1.0
edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = 1E-36
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability=1.0E-2
