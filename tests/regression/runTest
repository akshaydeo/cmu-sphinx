# This script runs a particular test in the given directory
#
# usage: runTest directory makeTargetName
#

base=`pwd`

directory=$1
target=$2
rawOutput=$target.out
alignOutput=$target.align

cd $directory
if gmake $target > $base/$rawOutput
then
  status="OK";
else
  status="FAILED";
fi

cd $base

$base/parseS4Output $rawOutput $status | $base/updateLog
