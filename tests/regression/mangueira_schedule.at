# Tests are scheduled using 'at' instead of cron due to problems with getting 
# ssh/cvs to work with cron.

echo scheduling tests in `pwd`

# Schedule the weekly tests

echo ". $HOME/.profile ; ./regressionTest ti46 batch" 	  | at -s 11pm + 0 day
echo ". $HOME/.profile ; ./regressionTest tidigits batch" | at -s 11pm + 1 day
echo ". $HOME/.profile ; ./regressionTest an4_words batch" | at -s 11pm + 2 day
echo ". $HOME/.profile ; ./regressionTest an4_spelling batch" | at -s 11pm + 3 day
echo ". $HOME/.profile ; ./regressionTest an4_full batch" | at -s 11pm + 4 day
echo ". $HOME/.profile ; ./regressionTest an4_plus batch" | at -s 11pm + 5 day
echo ". $HOME/.profile ; ./regressionTest rm1 batch" 	  | at -s 11pm + 6 day

# Schedule the daily standard tests

echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 0 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 1 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 2 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 3 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 4 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 5 day
echo ". $HOME/.profile ; ./regressionTest standard batch" | at -s 9pm + 6 day

# setup the schedule for next week

echo "./mangueira_schedule.at" | at -s 1am + 7 day
