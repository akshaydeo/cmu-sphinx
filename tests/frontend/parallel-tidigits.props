############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
# Log base for probabilities
############################################################
edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.model.acoustic.names = tidigits wsj

edu.cmu.sphinx.model.acoustic.tidigits.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.tidigits.location = /lab/speech/sphinx4/data/tidigits_model
edu.cmu.sphinx.model.acoustic.tidigits.definition_file = wd_dependent_phone.500.mdef
edu.cmu.sphinx.model.acoustic.tidigits.data_location = wd_dependent_phone.cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.tidigits.properties_file = am.parallel.props
edu.cmu.sphinx.model.acoustic.tidigits.FeatureVectorLength = 39

edu.cmu.sphinx.model.acoustic.wsj.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.wsj.location = /lab/speech/sphinx4/data/wsj
edu.cmu.sphinx.model.acoustic.wsj.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
edu.cmu.sphinx.model.acoustic.wsj.data_location = cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.wsj.properties_file = am.parallel.props

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
