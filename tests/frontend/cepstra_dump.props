###########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
# 
# FrontEnd properties
#
############################################################

# IMPORTANT : We do not have an acoustic model here!

edu.cmu.sphinx.frontend.useAcousticModelProperties = false

edu.cmu.sphinx.frontend.bytesPerAudioFrame = 4000
edu.cmu.sphinx.frontend.cepstrumSize = 13
edu.cmu.sphinx.frontend.sampleRate = 16000

edu.cmu.sphinx.frontend.preemphasis.factor = 0.97

edu.cmu.sphinx.frontend.windowSizeInMs = 25.625
edu.cmu.sphinx.frontend.windowShiftInMs = 10
edu.cmu.sphinx.frontend.windower.alpha = 0.46

edu.cmu.sphinx.frontend.fft.numberFftPoints = 512

# edu.cmu.sphinx.frontend.filterbank = edu.cmu.sphinx.frontend.mfc.MelFilterbank
# edu.cmu.sphinx.frontend.mel.numFilters = 40
# edu.cmu.sphinx.frontend.mel.minfreq = 130
# edu.cmu.sphinx.frontend.mel.maxfreq = 6800
# edu.cmu.sphinx.frontend.cepstrumProducer = edu.cmu.sphinx.frontend.mfc.MelCepstrumProducer

edu.cmu.sphinx.frontend.filterbank = edu.cmu.sphinx.frontend.plp.PLPFilterbank
edu.cmu.sphinx.frontend.plp.numFilters = 40
edu.cmu.sphinx.frontend.plp.minfreq = 130
edu.cmu.sphinx.frontend.plp.maxfreq = 6800
edu.cmu.sphinx.frontend.cepstrumProducer = edu.cmu.sphinx.frontend.plp.PLPCepstrumProducer

edu.cmu.sphinx.frontend.cmn = none

# the NullFeatureExtractor simply does nothing
edu.cmu.sphinx.frontend.featureExtractor = edu.cmu.sphinx.frontend.NullFeatureExtractor
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 13
