###########################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARN

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARN
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.util.LogMath.logBase = 1.0001

edu.cmu.sphinx.knowledge.acoustic.FeatureVectorLength = 39

edu.cmu.sphinx.knowledge.acoustic.format = sphinx3.binary
edu.cmu.sphinx.knowledge.acoustic.location = file:/lab/speech/sphinx4/data/wsj_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip

edu.cmu.sphinx.knowledge.acoustic.definition_file = etc/WSJ_clean_13dCep_16k_40mel_130Hz_6800Hz.4000.mdef
edu.cmu.sphinx.knowledge.acoustic.data_location = cd_continuous_8gau
edu.cmu.sphinx.knowledge.acoustic.properties_file = am.props



############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.useAcousticModelProperties = true
edu.cmu.sphinx.frontend.bytesPerAudioFrame = 4000
edu.cmu.sphinx.frontend.cepstrumSize = 13
edu.cmu.sphinx.frontend.cmn = edu.cmu.sphinx.frontend.LiveCMN
edu.cmu.sphinx.frontend.featureExtractor.cepstraBufferSize = 256
edu.cmu.sphinx.frontend.featureExtractor.featureLength = 39
edu.cmu.sphinx.frontend.featureExtractor.windowSize = 3
edu.cmu.sphinx.frontend.preemphasis.factor = 0.97
edu.cmu.sphinx.frontend.windowSizeInMs = 25.625
edu.cmu.sphinx.frontend.windowShiftInMs = 10
edu.cmu.sphinx.frontend.windower.alpha = 0.46
edu.cmu.sphinx.frontend.util.Microphone.closeAudioBetweenUtterances=true


############################################################
#
# CardMatch properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.JSGFGrammar.path=player/player.gram


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.grammar=edu.cmu.sphinx.decoder.linguist.JSGFGrammar


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=800
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-150


############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.decoder.linguist.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.decoder.linguist.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.decoder.linguist.Linguist.wordInsertionProbability = 1.0E-26
edu.cmu.sphinx.decoder.linguist.Linguist.autoLoopSilences=false
edu.cmu.sphinx.decoder.linguist.Grammar.showGrammar=true


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.knowledge.dictionary.Dictionary.useAcousticModelLocation = true
edu.cmu.sphinx.knowledge.dictionary.Dictionary.dictionaryPath = dict/cmudict.0.6d
edu.cmu.sphinx.knowledge.dictionary.Dictionary.fillerPath = dict/fillerdict
edu.cmu.sphinx.knowledge.dictionary.Dictionary.wordReplacement=<sil>
edu.cmu.sphinx.knowledge.dictionary.Dictionary.allowMissingWords=true
edu.cmu.sphinx.knowledge.dictionary.Dictionary.addSilEndingPronunciation=false


############################################################
#
# AcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:

edu.cmu.sphinx.search.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.search.ThreadedAcousticScorer.numThreads=-1
edu.cmu.sphinx.search.ThreadedAcousticScorer.minTokensPerThread=10

edu.cmu.sphinx.decoder.Decoder.showPartialResults=false
