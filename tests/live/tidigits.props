############################################################
#
# Global logging properties
#
############################################################

handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= WARNING

# Tracing level for the console
java.util.logging.ConsoleHandler.level = WARNING
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.models=tidigits
tidigits;edu.cmu.sphinx.linguist.acoustic.AcousticModelFactory.class=edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel

tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.format = sphinx3.binary
tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.location = file:/lab/speech/sphinx4/data/tidigits_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.definition_file = wd_dependent_phone.500.mdef
tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.data_location = wd_dependent_phone.cd_continuous_8gau
tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.properties_file = am.props
tidigits;edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel.FeatureVectorLength = 39

edu.cmu.sphinx.util.LogMath.logBase = 1.0001


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.util.Microphone.debug=false
edu.cmu.sphinx.frontend.util.Microphone.keepLastAudio=true
edu.cmu.sphinx.frontend.util.Microphone.closeBetweenUtterances=true

edu.cmu.sphinx.frontend.FrontEndFactory.pipelines=mfc_ep

mfc;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=8
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.feature.LiveCMN
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor
mfc;edu.cmu.sphinx.frontend.FrontEndFactory.stage.8.class=edu.cmu.sphinx.frontend.feature.FrameDropper

mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.nStages=9
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.1.class=edu.cmu.sphinx.frontend.endpoint.LevelTracker
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.2.class=edu.cmu.sphinx.frontend.filter.Preemphasizer
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.3.class=edu.cmu.sphinx.frontend.window.RaisedCosineWindower
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.4.class=edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.5.class=edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.6.class=edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.7.class=edu.cmu.sphinx.frontend.feature.LiveCMN
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.8.class=edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor
mfc_ep;edu.cmu.sphinx.frontend.FrontEndFactory.stage.9.class=edu.cmu.sphinx.frontend.feature.FrameDropper

edu.cmu.sphinx.frontend.endpoint.LevelTracker.threshold=13
edu.cmu.sphinx.frontend.feature.FrameDropper.dropEveryNthFrame=2
edu.cmu.sphinx.frontend.feature.FrameDropper.replaceNthWithPrevious=true


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.decoder.search.ActiveList.absoluteBeamWidth=200
edu.cmu.sphinx.decoder.search.ActiveList.relativeBeamWidth=1E-200

edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.activeListType = edu.cmu.sphinx.decoder.search.SortingActiveList
edu.cmu.sphinx.decoder.search.BreadthFirstSearchManager.languageWeight=7.0


############################################################
# 
# Dictionary properties
#
############################################################

edu.cmu.sphinx.linguist.dictionary.Dictionary.location =  file:/lab/speech/sphinx4/data/tidigits_8gau_13dCep_16k_40mel_130Hz_6800Hz.bin.zip
edu.cmu.sphinx.linguist.dictionary.Dictionary.dictionaryPath = dictionary
edu.cmu.sphinx.linguist.dictionary.Dictionary.fillerPath = fillerdict
edu.cmu.sphinx.linguist.dictionary.Dictionary.addSilEndingPronunciation=true


############################################################
#
# ThreadedAcousticScorer properties
#
############################################################
#
# By setting isCpuRelative to true, num scoring threads is
#    equal to num_avail_processors + e.c.s.ThreadedAcousticScorernumThreads.
#
# By setting isCpuRelative to false, num scoring threads is
#    equal to edu.cmu.sphinx.ThreadedAcousticScorer.numThreads
#
# Use the number of available CPUS for scoring:
#

edu.cmu.sphinx.search.ThreadedAcousticScorer.isCpuRelative=true
edu.cmu.sphinx.search.ThreadedAcousticScorer.numThreads=0
edu.cmu.sphinx.search.ThreadedAcousticScorer.minTokensPerThread=10

############################################################
#
# Linguist properties
#
############################################################

edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar.isLooping = true
edu.cmu.sphinx.linguist.language.grammar.SimpleWordListGrammar.path = ../performance/tidigits/tidigits.wordlist

edu.cmu.sphinx.linguist.Linguist.wordInsertionProbability = 1.0E-36
edu.cmu.sphinx.linguist.Linguist.silenceInsertionProbability = 1.0
edu.cmu.sphinx.linguist.Linguist.showSentenceHMM=false
edu.cmu.sphinx.linguist.Linguist.validateSentenceHMM=false
edu.cmu.sphinx.linguist.Linguist.compositeThreshold=10000
edu.cmu.sphinx.linguist.Linguist.expandInterNodeContexts=true


############################################################
# 
# Recognizer properties
#
############################################################

edu.cmu.sphinx.decoder.Recognizer.dumpFrontEnd = true
