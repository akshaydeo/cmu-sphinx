############################################################
# Global logging properties
############################################################
handlers= java.util.logging.ConsoleHandler

# This is the overall default logging level
.level= SEVERE

# Tracing level for the console
java.util.logging.ConsoleHandler.level = ALL
java.util.logging.ConsoleHandler.formatter = edu.cmu.sphinx.util.SphinxLogFormatter


############################################################
#
# Acoustic model properties
#
############################################################

edu.cmu.sphinx.model.acoustic.format = sphinx3.ascii
edu.cmu.sphinx.model.acoustic.location = /lab/speech/sphinx3j/data/connected_digits
edu.cmu.sphinx.model.acoustic.definition_file = wdclean.500.mdef
edu.cmu.sphinx.model.acoustic.data_location = wdclean.cd_continuous_8gau
edu.cmu.sphinx.model.acoustic.FeatureVectorLength = 39


############################################################
# 
# FrontEnd properties
#
############################################################

edu.cmu.sphinx.frontend.MelCepstrumFileProducer.file = /lab/speech/sphinx3j/data/connected_digits/sample_feature_files/FAC_1473533A.08.dbw.mfc.ascii
edu.cmu.sphinx.frontend.cepstrumSize = 13


############################################################
# 
# Search properties
#
############################################################

edu.cmu.sphinx.search.dictionaryPath=/lab/speech/sphinx3j/data/connected_digits/train.dict
edu.cmu.sphinx.search.fillerDictionaryPath=/lab/speech/sphinx3j/data/connected_digits/fillerdict
edu.cmu.sphinx.search.SimpleLinguist.isMultiDigitGrammar=true
