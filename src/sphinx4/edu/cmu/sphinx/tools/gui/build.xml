<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." default="all" name="The GUI test.">

<description>
This file is used to run the GUI.


</description>

    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Properties common to all tests                         * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <property name="top_dir"		value="../../../../../../.."/>
 <!--   <property name="lib_dir"            value="${top_dir}/lib"/>  -->
    <property name="build_dir"		value="${top_dir}/bld"/>
    <property name="classes_dir"	value="${build_dir}/classes"/>

    <path id="run.classpath">
        <pathelement path="${classes_dir}"/>   
    </path>


    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * The 'none' target.                                     * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="none">
            <echo>Type 'ant -projecthelp' for possible targets.</echo>
    </target>


    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Compile all the test code.                             * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="all"
            description="Compiles all the tests.">
	    <javac debug="true"
	           source="1.4"
		   deprecation="true"
		   destdir="${classes_dir}"
		   classpath="${classes_dir}"
		   srcdir="."/>
    </target>


    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Runs the GUI tester                                    * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="run"
	    description="Runs the complete GUI demo."
	    depends="all">
	    <java classname="edu.cmu.sphinx.tools.gui.GUIMainDriver"
	          fork="true"
		  maxmemory="256m"
                  classpath="${classes_dir}">
                    <classpath refid="run.classpath"/>
                  <!-- <sysproperty key="frontend" value="epFrontEnd"/> -->		
		  <!-- <arg value="gui.config.xml"/> -->
	    </java>
    </target>

    
    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Runs the RW tester, test the reader and writer components * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="runrw"
	    description="Runs the GUI-readwrite demo."
	    depends="all">
	    <java classname="edu.cmu.sphinx.tools.gui.GUIRWTester"
	          fork="true"
		  maxmemory="128m">
                  <!-- <sysproperty key="frontend" value="epFrontEnd"/> -->
		  <classpath refid="run.classpath"/>
		  <!-- <arg value="gui.config.xml"/> -->
	    </java>
    </target>
    
    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Runs the class traverse test, to check if model is built correctly * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="runtraverse"
	    description="Runs the class scanning test."
	    depends="all">
	    <java classname="edu.cmu.sphinx.tools.gui.util.ClassTraverseTester"
	          fork="true"
		  maxmemory="128m">
                  <!-- <sysproperty key="frontend" value="epFrontEnd"/> -->
		  <classpath refid="run.classpath"/>
		  <!-- <arg value="gui.config.xml"/> -->
	    </java>
    </target>

    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Runs the javadoc test                                  * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="run-javadoc"
	    description="Runs the Javadoc parser demo."
	    depends="all">
	    <java classname="edu.cmu.sphinx.tools.gui.util.RunCommand"
	          fork="true"
		  maxmemory="256m">
                <classpath refid="run.classpath"/>                    
                  <!-- <sysproperty key="frontend" value="epFrontEnd"/> -->		
		  <!-- <arg value="gui.config.xml"/> -->
	    </java>
    </target>
    
    
    <target name="fileread-compile">
         <javac debug="true"
	           source="1.4"
		   deprecation="true"
		   destdir="${classes_dir}"
		   classpath="${classes_dir}"
		   srcdir="."
                   includes="util/SourceReaderFrame.java"
                   />
    </target>
    
    <!-- ********************************************************** -->
    <!-- *                                                        * -->
    <!-- * Runs the file reader test                              * -->
    <!-- * This run is used to test Java can find                 * -->
    <!-- * a particular source file                               * -->
    <!-- *                                                        * -->
    <!-- ********************************************************** -->
    <target name="run-fileread"
	    description="Runs the File reader demo."
            depends="fileread-compile">
           
	    <java classname="edu.cmu.sphinx.tools.gui.util.SourceReaderFrame"
	          fork="true"
		  maxmemory="256m">
                <classpath refid="run.classpath"/>                    
                  <!-- <sysproperty key="frontend" value="epFrontEnd"/> -->		
		  <!-- <arg value="gui.config.xml"/> -->
	    </java>
    </target>
    
</project>